        },
        "CsI5": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI6": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI7": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI8": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI9": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI10": {
          "$ref": "../core/DetectorStatus.schema.json"
        },
        "CsI11": {
          "$ref": "../core/DetectorStatus.schema.json"
        }
      }
    }
  }
}
