{
  "$id": "GRB.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GRB",
  "description": "gbm reported GRB notices",
  "type": "object",
  "properties": {
    "alert_info": {
      "$ref": "AlertInfo.schema.json"
    },
    "identifiers": {
      "$ref": "Identifiers.schema.json"
    },
    "event_info": {
      "$ref": "EventInfo.schema.json"
    },
    "datetime": {
      "$ref": "DateTime.schema.json"
    },
    "localization": {
      "$ref": "Localization.schema.json"
    },
    "statistics": {
      "$ref": "Statistics.schema.json"
    },
    "comments": {
      "type": "string",
      "description": "Additional information about the event"
    },
    "grb_duration": {
      "$ref": "Duration.schema.json"
    },
    "spectral_values": {
      "$ref": "GammaRay.schema.json"
    },
    "specific": {
      "$ref": "Specific.schema.json"
    }
  }
}
