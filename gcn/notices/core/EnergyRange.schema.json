{
  "$id": "https://gcn.nasa.gov/schema/gcn/notices/core/EnergyRange.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "EnergyRange",
  "description": "Generic energy range schema",
  "properties": {
    "energy_low": {
      "type": "number",
      "description": "lower bound in range"
    },
    "energy_high": {
      "type": "number",
      "description": "higher bound in range"
    },
    "band": {
      "enum": ["energy", "wavelength", "frequency"],
      "description": "high energy or optical or radio observations",
      "type": "string"
    },
    "units": {
      "enum": ["keV", "nm", "Hz"],
      "description": "units of band range",
      "type": "string"
    }
  },
  "required": ["band", "units"]
}
