{
  "$id": "https://gcn.nasa.gov/schema/gcn/notices/core/GeoLocBase.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Geolocation (Generic)",
  "description": "A generic schema for position and velocity in geocentric coordinates.",
  "$comment": "Providers shouldn't $ref this schema directly, but GeoLoc.schema.json instead.",
  "type": "object",
  "properties": {
    "latitude": { "type": "number", "description": "Geocentric lat-lon" },
    "longitude": { "type": "number", "description": "Geocentric lat-lon" },
    "radius": {
      "type": "number",
      "description": "Distance from the center of the Earth."
    },
    "x": { "type": "number", "description": "Cartesian geocentric" },
    "y": { "type": "number", "description": "Cartesian geocentric" },
    "z": { "type": "number", "description": "Cartesian geocentric" },
    "vx": { "type": "number", "description": "Cartesian geocentric velocity" },
    "vy": { "type": "number", "description": "Cartesian geocentric velocity" },
    "vz": { "type": "number", "description": "Cartesian geocentric velocity" },
    "time": {
      "type": "string",
      "description": "Time [UTC, ISO 8601] of this data, if different than the trigger time."
    }
  }
}
