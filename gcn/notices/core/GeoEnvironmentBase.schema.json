{
  "$id": "https://gcn.nasa.gov/schema/gcn/notices/core/GeoEnvironmentBase.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Important Angles and McIlwain-L (Generic)",
  "description": "A generic schema for McIlwain-L parameter and some important celestial angles depending on the Spacecraft location.",
  "type": "object",
  "properties": {
    "mcilwain_L": { "type": "number", "description": "McIlwain L-parameter" },
    "burst_to_earth_angle": {
      "type": "number",
      "description": "Burst-Earth angle"
    },
    "burst_to_limb_angle": {
      "type": "number",
      "description": "Burst-to-Earth's limb angle"
    },
    "burst_to_moon_angle": {
      "type": "number",
      "description": "Burst-Moon angle"
    },
    "burst_to_sun_angle": {
      "type": "number",
      "description": "Burst-Sun angle"
    },
    "limb_to_moon_angle": {
      "type": "number",
      "description": "Moon-to-Earth's limb angle"
    },
    "limb_to_sun_angle": {
      "type": "number",
      "description": "Sun-to-Earth's limb angle"
    },
    "geoenvironment_time": {
      "type": "string",
      "description": "Time of this data."
    }
  }
}
