{
  "$id": "https://github.com/nasa-gcn/gcn-schema/blob/main/gcn/notices/core/HardnessRatio.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "HardnessRatio",
  "description": "Hardness Ratio parameterization",
  "properties": {
    "hardness_ratio": {
      "type": "number",
      "description": "ratio of flux between high and low energy bands"
    },
    "energy_range": {
      "$ref": "EnergyRange.schema.json",
      "description": "Energy range [keV] used in soft and hard band of hardness ratio"
    }
  },
  "required": ["hardness_ratio", "energy_range"]
}
