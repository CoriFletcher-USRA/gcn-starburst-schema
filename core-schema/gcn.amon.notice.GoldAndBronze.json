{
    "type": "object",
    "title": "gcn.amon.notice",
    "description": "GoldAndBronze",
    "properties": { 
        "type": {
            "description": "Notice type Gold or Bronze", 
            "type": ["string"]
        },  
        "event": {
            "$ref": "gcn.notices.core.EventInfo"
        }, 
        "ra": {
            "$ref": "gcn.notices.core.Localization"
        },
        "dec": {
            "$ref": "gcn.notices.core.Localization"
        },  
        "err": {
            "$ref": "gcn.notices.core.Localization"
        }, 
        "err50": {
            "description": "Location uncertainty (radius, 50% containment) in units of arcmin",  
            "type": ["number"],
            "minimum": 0
        }, 
        "discovery_date": {
            "$ref": "gcn.notices.core.AlertInfo"
        },
        "discovery_time": {
            "$ref": "gcn.notices.core.AlertInfo"
        },  
        "revision": {
            "description": "Revision number by IceCube",  
            "type": [ "number"]
        }, 
        "energy": {
            "description": "Most probable neutrino energy [TeV] that would have produced an event",  
            "type": ["number"],
            "minimum": 0
        }, 
        "signalness": {
            "description": "Probability [dn] that this is an astrophysical signal relative to backgrounds", 
            "type": [ "number"],
            "minimum": 0
        }, 
        "far": {
            "description": "Rate of background events expected that are 'like this alert', would be seen by IceCube per year", 
            "$ref": "gcn.notices.core.Statistics"
        }
    },
    
    "required": ["type", "event", "ra", "dec", "err", "err50", "discovery_date", "discovery_time", 
                 "revision", "energy", "signalness", "far"]
}